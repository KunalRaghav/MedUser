<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREDITS"
            android:layout_weight="1"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/dash_credits"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="5000"
            android:textAlignment="textEnd"
            android:layout_marginEnd="0dp"
            android:textSize="22sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dash_medchange_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="20dp">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/gradient_blue"
        android:layout_gravity="center"
        android:src="@drawable/ic_arrow_down_thick"
        android:scaleType="centerCrop"
        android:tint="@android:color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Medicines"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        style="@style/TextAppearance.AppCompat.Button"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dash_medchange_sell"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/gradient_green"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_up_thick"
            android:scaleType="centerCrop"
            android:tint="@android:color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELL Medicines"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            style="@style/TextAppearance.AppCompat.Button"/>
    </LinearLayout>
</LinearLayout>